#include<stdio.h>
#include<stdlib.h>
int x[10];
static int b=1;
void parintboard(int n)
{
    int i,j;
printf("Solution %d:\n",b++);
for(i=1;i<=n;i++)
{
    for(j=1;j<=n;j++)
    {
        if(x[i]==j)
        printf("Q\t");
        else
        printf("*\t");
        
    }printf("\n");
    
}
    
}
int place(int k,int i)
{
    int j;
    for(j=1;j<=k;j++)
    {
        if(x[j]==i || abs(x[j]-1)==abs(j-k))
        return 0;
    }
    return 1;
    
}
void NQueens(int k,int n)
{
    int i;
    for(i=1;i<=n;i++)
    {
        if(place(k,i))
        {
            x[k]=i;
            if(k==n)
            {
                printf("\n");
                parintboard(n);
            }
            else
            NQueens(k+1,n);
        }
    }
}
int main()
{
    int n, b;
    printf("Read number of Queens:");
    scanf("%d",&n);
    NQueens(1,n);
    if(b==1)
    printf("\n No solution ");
    return 0;
}
